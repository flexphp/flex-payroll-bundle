{% trans_default_domain 'paysheet' %}
<div class="card-header d-flex">
    <h4 class="card-header-title">
        <i class="fas fa-user"></i> Devengados: Cesant√≠as
    </h4>
    <div class="toolbar ml-auto">
        <button class="btn btn-sm btn-link" type="button" data-toggle="collapse" data-target="#accruedCessationData" aria-expanded="true" aria-controls="accruedCessationData">
            {% trans from 'messages' %}action.toggle{% endtrans %}
        </button>
    </div>
</div>

<div id="accruedCessationData" class="collapse {{ paysheet.details.accrued.cessation.0.amount|default('') != '' ? 'show' : 'hide' }} card-body">
    <div class="form-row">
        <div class="form-group col-4">
            <label for="accrued[cessation][0][amount]">Monto</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input name="accrued[cessation][0][amount]" class="form-control accrued" type="text" value="{{ paysheet.details.accrued.cessation.0.amount|default('') }}" />
            </div>
        </div>

        <div class="form-group col-4">
            <label for="accrued[cessation][0][noSalary]">Monto de Intereses</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input name="accrued[cessation][0][noSalary]" class="form-control accrued" type="text" value="{{ paysheet.details.accrued.cessation.0.noSalary|default('') }}" />
            </div>
        </div>

        <div class="form-group col-4">
            <label for="accrued[cessation][0][percentage]">Porcentaje</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">%</span>
                </div>
                <input name="accrued[cessation][0][percentage]" class="form-control accrued" type="text" value="{{ paysheet.details.accrued.cessation.0.percentage|default('') }}" />
            </div>
        </div>

    </div>
</div>
