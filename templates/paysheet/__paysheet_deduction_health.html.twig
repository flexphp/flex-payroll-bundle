{% trans_default_domain 'paysheet' %}
<div class="card-header d-flex">
    <h4 class="card-header-title">
        <i class="fas fa-user"></i> Deducciones: Salud y Pensión
    </h4>
    <div class="toolbar ml-auto">
        <button class="btn btn-sm btn-link" type="button" data-toggle="collapse" data-target="#deductionHealthData" aria-expanded="true" aria-controls="deductionHealthData">
            {% trans from 'messages' %}action.toggle{% endtrans %}
        </button>
    </div>
</div>

<div id="deductionHealthData" class="collapse show card-body">
    <div class="form-row">
        <div class="form-group col-3">
            <label for="deduction[health][0][percentage]">Salud Porcentaje</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">%</span>
                </div>
                <input name="deduction[health][0][percentage]" class="form-control" type="text" required />
            </div>
        </div>

        <div class="form-group col-3">
            <label for="deduction[health][0][amount]">Salud Monto</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input name="deduction[health][0][amount]" class="form-control" type="text" required />
            </div>
        </div>

        <div class="form-group col-3">
            <label for="deduction[pension][0][percentage]">Pensión Porcentaje</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">%</span>
                </div>
                <input name="deduction[pension][0][percentage]" class="form-control" type="text" required />
            </div>
        </div>

        <div class="form-group col-3">
            <label for="deduction[pension][0][amount]">Pensión Monto</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input name="deduction[pension][0][amount]" class="form-control" type="text" required />
            </div>
        </div>
    </div>
</div>
