{% trans_default_domain 'accountType' %}
{% extends 'form/layout.html.twig' %}

{% block title %}{% trans %}title.edit{% endtrans %}{% endblock %}

{% block main %}
    <div class="card">
        <div class="card-header d-flex">
            <h3 class="card-header-title">
                {% trans %}title.edit{% endtrans %}
            </h3>
            <div class="toolbar ml-auto">
                <a href="{{ path('flexphp.payroll.account-types.index') }}" class="btn btn-outline-secondary">
                    <i class="fa fa-list-ol" aria-hidden="true"></i>
                    <span class="btn-text">{% trans from 'messages' %}action.list{% endtrans %}</span>
                </a>
            </div>
        </div>

        {{ form_start(form, {'action': path('flexphp.payroll.account-types.update', {id: accountType.id}), 'method': 'PUT', 'attr': {'id': 'accountType'}}) }}
            <div class="card-body">
                {{ form_widget(form) }}
            </div>
        {{ form_end(form) }}

        <div class="card-footer">
            <div class="row">
                <div class="col">
                    {{ include('@FlexPHPPayroll/accountType/_delete_form.html.twig', {accountType: accountType}, with_context = false) }}
                </div>

                <div class="col text-right">
                    <button type="submit" form="accountType" class="btn btn-primary">
                        <i class="fa fa-save" aria-hidden="true"></i>
                        <span class="btn-text">{% trans from 'messages' %}action.update{% endtrans %}</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/accountTypes.js') }}"></script>
{% endblock %}
